#!/bin/bash

source $(dirname "${BASH_SOURCE[0]}")/functions

# for color
export CLICOLOR=1
export PS1='\[\033[01;33m\]\u@\h\[\033[01;31m\] \w\$\[\033[00m\] '

alias ls='ls --color=auto'
alias ll='ls -lh'
alias la='ls -ah'
alias lla='ls -lah'

alias vi='my-vim mini'
alias nvim='my-vim featured'
alias view='my-vim default -R'
alias vim='my-vim default'

export EDITOR=vim

my-path add ~/bins/default/bin/
my-path add ~/bins/scripts/

# vim: ts=2 sts=2 et sw=2
